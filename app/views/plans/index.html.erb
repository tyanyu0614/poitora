        <li><%= link_to current_user.nickname, user_path(current_user), class: "maypage-rigth" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout-right" %></li>
        <%end%>
        </ul>
      </nav>
    </div>
</header>
<div>
