</div>

<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
<%= search_form_for @p, url: search_plans_path do |f| %>
  <%= f.label :category_id_eq, 'カテゴリー名' %>
  <%= f.collection_select :category_id_eq, Category.all, :id, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.submit '検索' %>
<% end %>
<%= form_with(url: search_plans_path, local: true, method: :get, class: "search-plan") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "form-control" %>
  <%= form.submit "検索", class: "btn btn-primary" %>
   <% end %>
   </div>
  </div>
</div>

