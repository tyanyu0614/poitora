<% if current_user.liked_by?(plan.id) %>
          <td>
          <%= link_to destroy_like_path(plan),class: "like-link", method: :DELETE,remote: true do %> 
          <i class="fa fa-heart unlike-btn"></i>
          <% end %>
          <%= plan.likes.count %>
          </td>
        <% else %>
          <td><%= link_to create_like_path(plan),class: "like-link", method: :POST, remote: true do%> 
          <i class="fa fa-heart like-btn"></i>
          <% end %>
          <%= plan.likes.count %>
          </td>
        <% end %>